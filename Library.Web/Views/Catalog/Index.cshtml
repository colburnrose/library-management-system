@model Library.Web.Models.Catalog.AssetIndexModel

<div class="container">
    <div id="assets" class="table-responsive">
        <h3>Library Catalog</h3>
        <table class="table table-bordered table-striped" id="catalogIndexTable">
            <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Author / Director</th>
                <th>Dewey Call Number</th>
                <th># Copies</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model.Assets)
                {
                    <tr class="assetRow">
                        <td>
                            <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@item.Id">
                                <img src="@item.ImageUrl" class="imageCell"/>
                            </a>                          
                        </td>
                        <td class="catalogTitle">"@item.Title"</td>
                        <td class="catalogAuthor">"@item.AuthorOrDirector"</td>
                        <td class="catalogCallNumber">"@item.DeweyCallNumber"</td>
                        <td class="catalogCopy">"@item.NumberOfCopies"</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

